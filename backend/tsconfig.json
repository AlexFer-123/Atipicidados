{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",                    // Diretório de saída para os arquivos compilados
    "rootDir": "./src",                    // Diretório raiz dos arquivos de entrada
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],                  // Inclui todos os arquivos dentro de src
  "exclude": ["node_modules"]               // Exclui node_modules da compilação
}
